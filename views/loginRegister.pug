doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='./styles/style.css')
  title Product x Product
header
  a.brand(href='./') Hisoka&apos;s market
  nav
    ul
      li.page-section
        a(href='./') Productos
      li.page-section
        a(href='./login-register') Ingresar
.section-container
  .form-container
    form#form-sign-in(method='post'  action="/login")
      #signin-container
        h3 Ingresar
        input.input-form(type='text' placeholder='Correo electronico' name='username')
        input.input-form(type='text' placeholder='Contraseña' name='password')
        button.button(type='submit') Ingresar
        p#signup-action.action-form Registrarse
    form#form-sign-up(method='post'  action="/register")
      #signup-container
        h3 Registrarse
        input.input-form(type='text' placeholder='Correo electronico' name='username')
        input.input-form(type='text' placeholder='Alias' name='alias')
        input.input-form(type='text' placeholder='Nombre' name='nombre')
        input.input-form(type='text' placeholder='apellido' name='apellido')
        input.input-form(type='text' placeholder='Contraseña' name='password')
        input.input-form(type='text' placeholder='Repetir contraseña' name='passwordConfirmation')
        button.button(type='submit') Registrarse
        p#signin-action.action-form Ingresar
script(src='./js/signToggler.js')
